<h1>Sign in</h1>

<% if flash[:notice] %>
    <div style="color: red"><%= flash[:notice] %></div>
  <% end %>
<% if flash[:error] %>
    <div style="color: red">
      <%= flash[:error] %>
    </div>
<% end %>

<%= form_tag sessions_path do %>
  <p>
    <%= label_tag :email %><br>
    <%= text_field_tag :email, params[:email] %>
  </p>
  <p>
    <%= label_tag :password %><br>
    <%= password_field_tag :password%>
  </p>
  <%= submit_tag "Sign in" %>
<% end %>