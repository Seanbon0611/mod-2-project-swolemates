<%= form_for @coach_review do |f| %>
    <p>
        <%= f.label :coach_id %><br>
        <%= f.collection_select :coach_id, @coaches, :id, :name %>
    </p>
    <p>
        <%= f.label :rating %><br>
        <%= f.number_field :rating %><br>
    </p>
    <p>
        <%= f.label :content %><br>
        <%= f.text_area :content %><br>
    </p>
    <% #PLACEHOLDER This form should only be accessed to a user that is currently logged in. Users cannot add a review if they are not registered %>
    <%= f.submit %>
    <% if flash[:errors] %>
        <% flash[:errors].each do |error| %>
            <li><%= error %></li>
        <% end %>
    <% end %>
<% end %>